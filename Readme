function categorizeRulesVerticalFormatWithColorsAndCounts() {
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  const week1Sheet = ss.getSheetByName("Week1");
  const week2Sheet = ss.getSheetByName("Week2");
  const summarySheet = ss.getSheetByName("Summary") || ss.insertSheet("Summary");

  // Clear Summary sheet
  summarySheet.clear();

  // Get data from Week 1 and Week 2
  const week1Data = week1Sheet.getRange(2, 1, week1Sheet.getLastRow() - 1, 2).getValues();
  const week2Data = week2Sheet.getRange(2, 1, week2Sheet.getLastRow() - 1, 2).getValues();

  const ruleMap = {};

  // Process Week 1 rules
  for (let [rule, count] of week1Data) {
    ruleMap[rule] = { week1: count || 0, week2: 0 };
  }

  // Process Week 2 rules
  for (let [rule, count] of week2Data) {
    if (ruleMap[rule]) {
      ruleMap[rule].week2 = count || 0;
    } else {
      ruleMap[rule] = { week1: 0, week2: count || 0 };
    }
  }

  // Arrays to hold categorized rules
  const frequent = [];
  const occasional = [];
  const rareNew = [];

  // Categorize rules
  for (let rule in ruleMap) {
    const w1 = ruleMap[rule].week1;
    const w2 = ruleMap[rule].week2;
    const displayText = `${rule} (W1: ${w1}, W2: ${w2})`;

    if (w1 >= 5 && w2 >= 5) {
      frequent.push(displayText);
    } else if (w1 > 0 && w2 > 0) {
      occasional.push(displayText);
    } else {
      rareNew.push(displayText);
    }
  }

  // Set headers
  summarySheet.getRange("A1").setValue("Frequent");
  summarySheet.getRange("B1").setValue("Occasional");
  summarySheet.getRange("C1").setValue("Rare / New");

  // Apply header background colors
  summarySheet.getRange("A1").setBackground("#d9ead3"); // light green
  summarySheet.getRange("B1").setBackground("#fff2cc"); // light yellow
  summarySheet.getRange("C1").setBackground("#f4cccc"); // light red

  // Get max number of rows to write
  const maxLength = Math.max(frequent.length, occasional.length, rareNew.length);

  for (let i = 0; i < maxLength; i++) {
    if (frequent[i]) summarySheet.getRange(i + 2, 1).setValue(frequent[i]);
    if (occasional[i]) summarySheet.getRange(i + 2, 2).setValue(occasional[i]);
    if (rareNew[i]) summarySheet.getRange(i + 2, 3).setValue(rareNew[i]);
  }

  // Apply column background colors
  if (frequent.length > 0)
    summarySheet.getRange(2, 1, frequent.length, 1).setBackground("#d9ead3"); // green
  if (occasional.length > 0)
    summarySheet.getRange(2, 2, occasional.length, 1).setBackground("#fff2cc"); // yellow
  if (rareNew.length > 0)
    summarySheet.getRange(2, 3, rareNew.length, 1).setBackground("#f4cccc"); // red

  SpreadsheetApp.flush();
}
